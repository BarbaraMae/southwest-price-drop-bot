extends layout.pug

block content
  style(type='text/css').
    table {
      border-collapse: collapse;
    }
    td, th {
      padding: 3px 5px;
      text-align: center;
      vertical-align: middle;
    }
    tbody tr:nth-child(odd) {
      background: #eeeeee;
    }
  h4
    a(href='/new') + Add Price Alert

  if alerts.length
    table
      thead
        th Date
        th From
        th To
        th Flight
        th Price
        th Phone
      tbody
        each alert in alerts
          tr
            a(href='/')
              td= alert.date.toLocaleDateString()
              td= alert.from
              td= alert.to
              td= alert.number
              td= '$' + alert.price
              td= alert.phone
              td
                a(href=`/${alert.hash()}`) Show
