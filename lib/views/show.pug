extends layout.pug

block content
  style(type='text/css').
    td:first-child {
      font-weight: bold;
      padding-right: 5px;
    }

  table
    tbody
      tr
        td Date
        td= alert.date.toLocaleDateString()
      tr
        td From
        td= alert.from
      tr
        td To
        td= alert.to
      tr
        td Flight
        td= alert.number
      tr
        td Price
        td= '$' + alert.price
      tr
        td Phone
        td= alert.phone
      tr
        td
        td
          form(action=`/delete/${alert.key()}`)
            button(type='submit') Delete Alert
