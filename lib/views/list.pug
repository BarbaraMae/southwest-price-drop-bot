include ./partials/header.pug

h4
  a(href='/new') + Add Price Alert

if alerts.length
  table
    thead
      th Date
      th From
      th To
      th Flight
      th Price
      th Phone
    tbody
      each alert in alerts
        tr
          a(href='/')
            td= alert.date
            td= alert.from
            td= alert.to
            td= alert.number
            td= '$' + alert.price
            td= alert.phone
            td
              a(href=`/${alert.key()}`) Show
